{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@lib/*": ["./src/lib/*"],
			"@styles/*": ["./src/styles/*"],
			"@public/*": ["./public/*"],
			"@data/*": ["./src/data/*"]
		},
	},
	"rootDir": "src",
	"extends": "tsconfig/nextjs.json",
	"include": [
		"types.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
